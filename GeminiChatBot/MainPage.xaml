<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:GeminiChatBot.ViewModels"
             x:Class="GeminiChatBot.MainPage"
             x:DataType="viewmodels:ChatViewModel"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#1E1E1E}">

    <Grid RowDefinitions="Auto,*,Auto" Padding="0">

        <!-- Header -->
        <Border Grid.Row="0"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2D2D2D}"
                Padding="20,10"
                StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2" />
            </Border.Shadow>

            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout Grid.Column="0" Spacing="4">
                    <Label Text="Mon petit Chat"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#FFFFFF}" />
                    <Label Text="Model utilisé Gemini 2.5 Flash"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light=#666666, Dark=#999999}" />
                </VerticalStackLayout>

                <Button Grid.Column="1"
                        Text="Effacer"
                        Command="{Binding ClearChatCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light=#4285F4, Dark=#8AB4F8}"
                        BorderWidth="0"
                        VerticalOptions="Center" />
            </Grid>
        </Border>

        <!-- Messages Area -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Messages}"
                        Margin="0"
                        BackgroundColor="Transparent">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Null}">
                    <Grid Padding="16,8">
                        <Border BackgroundColor="{Binding IsUser, Converter={StaticResource BoolToColorConverter}}"
                                Padding="16,12"
                                Margin="{Binding IsUser, Converter={StaticResource BoolToMarginConverter}}"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="16" />
                            </Border.StrokeShape>

                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding Text}"
                                       TextColor="{Binding IsUser, Converter={StaticResource BoolToTextColorConverter}}"
                                       FontSize="15"
                                       LineBreakMode="WordWrap" />
                                <Label Text="{Binding Timestamp, StringFormat='{0:HH:mm}'}"
                                       FontSize="11"
                                       Opacity="0.7"
                                       TextColor="{Binding IsUser, Converter={StaticResource BoolToTextColorConverter}}"
                                       HorizontalOptions="End" />
                            </VerticalStackLayout>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Input Area -->
        <Border Grid.Row="2"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2D2D2D}"
                Padding="16"
                StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,-2" />
            </Border.Shadow>

            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <Border Grid.Column="0"
                        BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#3A3A3A}"
                        StrokeThickness="0"
                        Padding="16,12">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="24" />
                    </Border.StrokeShape>

                    <Entry Placeholder="Tapez votre message..."
                           Text="{Binding UserMessage}"
                           ReturnCommand="{Binding SendMessageCommand}"
                           IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                           BackgroundColor="Transparent"
                           TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#FFFFFF}"
                           PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                           FontSize="15" />
                </Border>

                <Button Grid.Column="1"
                        Text="➤"
                        Command="{Binding SendMessageCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                        BackgroundColor="{AppThemeBinding Light=#4285F4, Dark=#8AB4F8}"
                        TextColor="White"
                        FontSize="20"
                        WidthRequest="56"
                        HeightRequest="56"
                        CornerRadius="28"
                        Padding="0" />
            </Grid>
        </Border>

    </Grid>

</ContentPage>
